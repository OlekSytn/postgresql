.row
  %h1= "Edit Account Information"
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    = f.input :full_name
    = f.input :username, disabled: true, hint: 'You cannot change your username.'
    = f.input :password, hint: "#{@minimum_password_length} characters minimum (leave blank if you don't want to change it)."
    = f.input :password_confirmation
    = f.input :credit_card_number
    = f.input :address
    = f.input :phone_number
    = f.input :current_password, hint: "We need your current password to confirm your changes."
    = f.button :submit, "Update", class: 'expanded button'

.row
  .expanded.button-group
    = link_to "Back", :back, class: 'secondary button'
    = link_to "Cancel my account", registration_path(resource_name), class: 'alert button', data: { confirm: "Are you sure?" }, method: :delete
